<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/roulette_wheel_blur"
    tools:context="com.project.zoedmora.rr_mvp.MainActivity"

    >




    <ImageView
        android:layout_width="170dp"
        android:layout_height= "170dp"
        android:id="@+id/photo"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />


    <EditText
        android:hint="Style"
        android:text = "@string/empty_space"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/advanceButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:id="@+id/inputForStyle"
        android:visibility="invisible"/>

    <EditText
        android:hint="Distance"
        android:text="@string/empty_space"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputForStyle"
        android:layout_alignRight="@+id/inputForStyle"
        android:layout_alignEnd="@+id/inputForStyle"
        android:layout_marginTop="0dp"
        android:id="@+id/inputForDistance"
        android:visibility="invisible"/>

    <Button
        android:text="Advance Search"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advanceButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/findButton"
        android:layout_alignLeft="@+id/inputForStyle"
        android:layout_alignStart="@+id/inputForStyle" />

    <Button
        android:id="@+id/findButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/find_restaurant"
        android:layout_marginTop="35dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/myTextView"
        android:layout_alignParentRight="true"
        android:layout_height="130dp"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/photo"
        android:layout_toEndOf="@+id/photo"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin To Explore!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_below="@id/photo"

        style="@style/Base.Theme.AppCompat.Light.DarkActionBar" />

    <Button
        android:id="@+id/webSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myTextView"
        android:layout_alignLeft="@+id/myTextView"
        android:layout_alignStart="@+id/myTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/title"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/my_button"
        android:text="@string/website_search"
        android:visibility="invisible"
        style="@android:style/Widget.Button.Toggle"
        />


